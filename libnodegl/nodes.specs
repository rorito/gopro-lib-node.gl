#
# Nodes specifications for node.gl v0.0.0
#

- _Node:
    optional:
        - [glstates, NodeList]
        - [ranges, NodeList]
        - [name, string]

- AttributeVec2:
    constructors:
        - [id, string]

- AttributeVec3:
    constructors:
        - [id, string]

- AttributeVec4:
    constructors:
        - [id, string]

- Camera:
    constructors:
        - [child, Node]
    optional:
        - [eye, vec3]
        - [center, vec3]
        - [up, vec3]
        - [perspective, vec4]
        - [eye_transform, Node]
        - [center_transform, Node]
        - [up_transform, Node]
        - [fov_animkf, NodeList]
        - [pipe_fd, int]
        - [pipe_width, int]
        - [pipe_height, int]

- Texture:
    optional:
        - [target, int]
        - [format, int]
        - [internal_format, int]
        - [type, int]
        - [width, int]
        - [height, int]
        - [min_filter, int]
        - [mag_filter, int]
        - [wrap_s, int]
        - [wrap_t, int]
        - [data_src, Node]
        - [external_id, int]

- Media:
    constructors:
        - [filename, string]
    optional:
        - [start, double]
        - [initial_seek, double]
        - [sxplayer_min_level, string]
        - [time_animkf, NodeList]
        - [audio_tex, int]

- GLState:
    constructors:
        - [capability, int]
        - [enabled, int]

- GLBlendState:
    constructors:
        - [enabled, int]
    optional:
        - [src_rgb, int]
        - [dst_rgb, int]
        - [src_alpha, int]
        - [dst_alpha, int]
        - [mode_rgb, int]
        - [mode_alpha, int]

- GLColorState:
    constructors:
        - [enabled, int]
    optional:
        - [red, int]
        - [green, int]
        - [blue, int]
        - [alpha, int]

- GLStencilState:
    constructors:
        - [enabled, int]
    optional:
        - [writemask, int]
        - [func, int]
        - [func_ref, int]
        - [func_mask, int]
        - [op_sfail, int]
        - [op_dpfail, int]
        - [op_dppass, int]

- Group:
    optional:
        - [children, NodeList]

- TexturedShape:
    constructors:
        - [shape, Node]
        - [shader, Node]
    optional:
        - [textures, NodeList]
        - [uniforms, NodeList]
        - [attributes, NodeList]

- Quad:
    optional:
        - [corner, vec3]
        - [width, vec3]
        - [height, vec3]
        - [uv_corner, vec2]
        - [uv_width, vec2]
        - [uv_height, vec2]

- Triangle:
    constructors:
        - [edge0, vec3]
        - [edge1, vec3]
        - [edge2, vec3]
    optional:
        - [uv_edge0, vec2]
        - [uv_edge1, vec2]
        - [uv_edge2, vec2]

- ShapePrimitive:
    constructors:
        - [coordinates, vec3]
        - [texture_coordinates, vec2]
    optional:
        - [normals, vec3]
        - [animkf_x, NodeList]
        - [animkf_y, NodeList]
        - [animkf_z, NodeList]

- Shape:
    optional:
        - [primitives, NodeList]
        - [draw_mode, int]
        - [draw_type, int]

- Shader:
    optional:
        - [vertex_data, string]
        - [fragment_data, string]

- RenderRangeContinuous:
    constructors:
        - [start_time, double]

- RenderRangeNoRender:
    constructors:
        - [start_time, double]

- RenderRangeOnce:
    constructors:
        - [start_time, double]
        - [render_time, double]

- Rotate:
    constructors:
        - [child, Node]
    optional:
        - [angle, double]
        - [axis, vec3]
        - [anchor, vec3]
        - [animkf, NodeList]

- RTT:
    constructors:
        - [child, Node]
        - [color_texture, Node]
    optional:
        - [depth_texture, Node]

- Translate:
    constructors:
        - [child, Node]
    optional:
        - [vector, vec3]
        - [animkf, NodeList]

- Scale:
    constructors:
        - [child, Node]
    optional:
        - [factors, vec3]
        - [anchor, vec3]
        - [animkf, NodeList]

- AnimKeyFrameScalar:
    constructors:
        - [time, double]
        - [value, double]
    optional:
        - [easing, string]
        - [easing_args, doubleList]

- AnimKeyFrameVec2:
    constructors:
        - [time, double]
        - [value, vec2]
    optional:
        - [easing, string]
        - [easing_args, doubleList]

- AnimKeyFrameVec3:
    constructors:
        - [time, double]
        - [value, vec3]
    optional:
        - [easing, string]
        - [easing_args, doubleList]

- AnimKeyFrameVec4:
    constructors:
        - [time, double]
        - [value, vec4]
    optional:
        - [easing, string]
        - [easing_args, doubleList]

- UniformScalar:
    constructors:
        - [id, string]
    optional:
        - [value, double]
        - [animkf, NodeList]

- UniformVec2:
    constructors:
        - [id, string]
    optional:
        - [value, vec2]
        - [animkf, NodeList]

- UniformVec3:
    constructors:
        - [id, string]
    optional:
        - [value, vec3]
        - [animkf, NodeList]

- UniformVec4:
    constructors:
        - [id, string]
    optional:
        - [value, vec4]
        - [animkf, NodeList]

- UniformMat4:
    constructors:
        - [id, string]
    optional:
        - [transform, Node]

- UniformSampler:
    constructors:
        - [id, string]
    optional:
        - [type, int]

- UniformInt:
    constructors:
        - [id, string]
    optional:
        - [value, int]

- FPS:
    constructors:
        - [child, Node]
    optional:
        - [measure_update, int]
        - [measure_draw, int]
        - [create_databuf, int]

- Identity:

